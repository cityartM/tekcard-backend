{
    "compilerOptions": {
        "allowJs": true,
        "module": "ESNext",
        "moduleResolution": "bundler",
        "jsx": "react-jsx",
        "strict": true,
        "isolatedModules": true,
        "target": "ESNext",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "paths": {
            "@/*": ["./resources/frontend/js/**/*.{ts,tsx,d.ts}"]
        }
    },
    "include": ["resources/frontend/js/**/*.ts", "resources/frontend/js/**/*.tsx", "resources/frontend/js/**/*.d.ts"]
}
